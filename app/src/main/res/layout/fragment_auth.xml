<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.easypick.easypick.fragments.AuthFragment">
    <ImageView
        android:id="@+id/loginLanding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="#EEEFF4"
        android:scaleType="centerCrop"
        android:contentDescription="@string/comida"
        android:src="@drawable/whitefood" />
    <LinearLayout
        android:id="@+id/facebook_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#EEEFF4"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/loginExplain"
            android:fontFamily="@font/montserratsemibold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/fragment_info"
            android:text="@string/auth_text" />
        <com.facebook.login.widget.LoginButton
            android:id="@+id/buttonContinueWithFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:layout_gravity="center_horizontal"/>
<!--        <Button-->
<!--            android:id="@+id/buttonSignOut"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:text="@string/sign_out"-->
<!--            android:visibility="gone"/>-->
    </LinearLayout>
</LinearLayout>